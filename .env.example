# Database
DATABASE_URL=sqlite:///api/db/sleepsafe.db
# DATABASE_URL=postgresql://sleepsafe:sleepsafe_password@postgres:5432/sleepsafe

# PostgreSQL (for Docker)
POSTGRES_USER=sleepsafe
POSTGRES_PASSWORD=sleepsafe_password
POSTGRES_DB=sleepsafe
POSTGRES_PORT=5432

# MLflow
MLFLOW_TRACKING_URI=sqlite:///api/db/sleepsafe.db
# MLFLOW_TRACKING_URI=postgresql://sleepsafe:sleepsafe_password@postgres:5432/sleepsafe

# API Server
API_HOST=0.0.0.0
API_PORT=8000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Security
SECRET_KEY=change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO

# Detection Settings
EAR_THRESHOLD=0.25
EAR_CONSEC_FRAMES=10

# Frontend
NODE_ENV=production
NEXT_PUBLIC_API_URL=http://localhost:8000
